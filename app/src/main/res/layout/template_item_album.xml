<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="album"
            type="co.edu.uniandes.vinilos.data.model.Album" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/ivAlbum"
            android:layout_width="0dp"
            android:layout_height="200dp"
            android:layout_marginStart="80dp"
            android:layout_marginEnd="80dp"
            android:scaleType="centerCrop"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="12dp"
            tools:src="@android:drawable/btn_star"/>

        <TextView
            android:id="@+id/tvNameAlbum"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="@+id/ivAlbum"
            app:layout_constraintStart_toStartOf="@+id/ivAlbum"
            app:layout_constraintTop_toBottomOf="@+id/ivAlbum"
            android:layout_marginTop="8dp"
            android:textSize="16sp"
            android:text="@{album.name}"
            tools:text="Nombre del album"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>